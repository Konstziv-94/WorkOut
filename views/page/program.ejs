<%  layout('layout/boilerplate') -%>
<%- include('../partial/flash') %> 

<section class="program">
      
        <div class="container" id="program-cont">
            <form action="/program" method="POST" class="wrap-program validated-form" novalidate>
              <div class="form-group text-center">
                <h3 class="head">Program</h3>
              </div>
                  
                
                <div class="form-group row">
                  <label for="days" class="col-sm-2">Days</label>
                  <div class="col-sm-10">
                    <input type="number" id="days" class="form-control" name="days" min="1" max="6" required>
                  </div>
                </div>
                <fieldset class="form-group row">
                  <legend class="col-form-label col-sm-2 float-sm-left pt-0">Type</legend>
                  <div class="col-sm-10">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="type" id="power"  value="6" required>
                      <label class="form-check-label" for="power">
                        Power
                      </label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="type"  id="hypertrophy" value="12">
                      <label class="form-check-label" for="hypertrophy">
                        Hypertrophy
                      </label>
                    </div>
                    <div class="form-check disabled">
                      <input class="form-check-input" type="radio" name="type" id="dynamic" value="16">
                      <label class="form-check-label" for="dynamic">
                        Dynamic muscular endurance
                      </label>
                    </div>
                  </div>
                </fieldset>


                <div class="form-group row">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-dark">Submit</button>
                  </div>
                </div>
                
              

            </form>
        </div>
     
</section>


