<%  layout('layout/dashboard') -%>
<%- include('../partial/admin-nav')%>

<div class="container mt-5">
<form method="POST" action="/admin/blogs/<%= blog._id %>/edit?_method=PUT" novalidate class="validated-form">
  <table class="table table-striped table-sm" style="border: 1px solid grey;">
      <thead>
        <tr>
          
            <th>Id</th>
            <th>Title</th>
            <th>text</th>
            <th>image</th>
          
        
        

        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= blog.id%></td>
          <td><input type="text" value="<%= blog.title%>" name="Blog[title]" style="width: 100%;"></td>
          <td><textarea type="text"   name="Blog[text]" cols="40" style="width: 100%;"><%= blog.text%></textarea></td>
          <td><input type="text" value="<%= blog.image%>" name="Blog[image]" style="width: 50%;"></td>
          
        </tr>
      </tbody>
    </table>
    <button class="btn btn-info" type="submit" href="/admin/blogs/<%= blog._id %>">Update Blog</button>
    <a href="/admin/blogs" class="btn btn-primary">Back</a>
  </form>
  
</div>